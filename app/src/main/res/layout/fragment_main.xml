<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/inputTileHeight"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- <ImageView
             android:id="@+id/wIcon"
             android:layout_width="0dp"
             android:layout_height="40dp"
             android:layout_gravity="left|center_vertical"
             android:layout_weight="1"
             android:scaleType="fitStart"
             android:src="@drawable/ic_weight_26dp"
             android:tint="@color/lb_900" />-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Weight"
            android:textAlignment="viewStart"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/inputTextSize"
            android:tint="@color/lb_900" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/weightLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="lbs.">

            <EditText
                android:id="@+id/weight"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="sans-serif-condensed"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:textAlignment="viewEnd"
                android:textColorHint="@color/gr_400"
                android:textSize="@dimen/inputTextSize" />
        </android.support.design.widget.TextInputLayout>

        <Switch
            android:id="@+id/weightUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/lb_900"
            android:showText="true"
            android:soundEffectsEnabled="true"
            android:textOff="lb"
            android:textOn="kg"
            android:textSize="@dimen/inputTextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- <ImageView
             android:id="@+id/ageIcon"
             android:layout_width="0dp"
             android:layout_height="40dp"
             android:layout_gravity="left|center_vertical"
             android:layout_weight="1"
             android:scaleType="fitStart"
             android:src="@drawable/ic_cake_black_24dp"
             android:tint="@color/lb_900" />-->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Age"
            android:textAlignment="viewStart"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/inputTextSize"
            android:tint="@color/lb_900" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="years">

            <EditText
                android:id="@+id/years"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:inputType="number"
                android:maxLength="3"
                android:textAlignment="viewEnd"
                android:textColorHint="@color/gr_400"
                android:textSize="@dimen/inputTextSize" />
        </android.support.design.widget.TextInputLayout>

        <Switch
            android:id="@+id/sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/lb_900"
            android:showText="true"
            android:soundEffectsEnabled="true"
            android:textOff="M"
            android:textOn="F" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- <ImageView
             android:id="@+id/wIconX"
             android:layout_width="0dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:scaleType="fitStart"
             android:src="@drawable/ic_straighten_black_24dp"
             android:tint="@color/lb_900" />-->

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="Height"
            android:textAlignment="viewStart"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/inputTextSize"
            android:tint="@color/lb_900" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/feetTextLay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:hint="feet">

            <EditText
                android:id="@+id/feet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="viewEnd"
                android:textColorHint="@color/gr_400"
                android:textSize="@dimen/inputTextSize" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inchsTextLay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:hint="inches">

            <EditText
                android:id="@+id/inchs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="viewEnd"
                android:textColorHint="@color/gr_400"
                android:textSize="@dimen/inputTextSize" />
        </android.support.design.widget.TextInputLayout>

        <Switch
            android:id="@+id/heightUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/lb_900"
            android:showText="true"
            android:soundEffectsEnabled="true"
            android:textOff="ft"
            android:textOn="cm" />

    </LinearLayout>

    <!-- <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="bottom|center_horizontal"
         android:layout_marginTop="@dimen/activity_vertical_margin"
         android:text="BMI" />-->

</LinearLayout>
